<%= button_to 'New Grant', new_grant_path, {:method => 'get', :class => "new-button"} %>

<h1>Listing Grants</h1>

<p>Grants assign <%= link_to 'Rights', rights_path %> to <%= link_to 'Roles', roles_path %>.</p>

<table>
  <tr>
    <th>Right</th>
    <th>Role</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @grants.each do |grant| %>
  <tr>
    <td><%= grant.right.resource + ': ' +  grant.right.operation %></td>
    <td><%= grant.role.name %></td>
    <td><%= link_to 'Show', grant %></td>
    <td><%= link_to 'Edit', edit_grant_path(grant) %></td>
    <td><%= link_to 'Destroy', grant, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


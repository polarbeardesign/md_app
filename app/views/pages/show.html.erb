
<h1>
  <%= @page.title %>
</H1>

<p>
  <%=  markdown @page.body %>
</p>

<% if signed_in?%>
  <% if current_user.roles.any? {|role| role.name == "SuperUser" or role.name == "Admin" } %>
    <%= link_to 'Edit', edit_page_path(@page)  %> |
    <%= link_to 'Back', pages_path %>
  <% end %>
<% end %>


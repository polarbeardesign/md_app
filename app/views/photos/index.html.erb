<%= button_to 'New Photo', new_photo_path, {:method => 'get', :class => "new-button"} %>

<h1>Photos</h1>

<table>
  <tr>
    <th>Gallery</th>
    <th>Credit</th>
    <th>Photo title</th>
    <th>Description</th>
    <th>Image</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= photo.gallery.gallery_name %></td>
    <td><%= photo.credit %></td>
    <td><%= photo.photo_title %></td>
    <td><%= photo.description %></td>
    <td><%= image_tag photo.image.url(:thumb).to_s %></td>
    <td><%= photo.position %></td>
    <td><%= link_to 'Show', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', photo, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


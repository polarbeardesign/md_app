<%= button_to 'New Location', new_location_path, {:method => 'get', :class => "crud-nav"} %>

<h1>Locations</h1>

<table>
  <tr>
    <th>Short name</th>
    <th>Location name</th>
    <th>Icao identifier</th>
    <th>Description</th>
    <th>City</th>
    <th>State</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= location.short_name %></td>
    <td><%= location.location_name %></td>
    <td><%= location.icao_identifier %></td>
    <td><%= location.description %></td>
    <td><%= location.city %></td>
    <td><%= location.state %></td>
    <td><%= location.latitude %></td>
    <td><%= location.longitude %></td>
    <td><%= link_to 'Show', location %></td>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= link_to 'Destroy', location, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

